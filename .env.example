# ============================================================================
# CLOUD PLATFORM SELECTION (Choose One)
# ============================================================================
# Set to your preferred cloud provider
CLOUD_PLATFORM=aws                # aws | gcp | digitalocean

# Environment settings
ENVIRONMENT=production             # development | staging | production
NODE_ENV=production               # development | production

# ============================================================================
# AWS CONFIGURATION
# ============================================================================
# Required for AWS deployments
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# EKS Cluster
EKS_CLUSTER_NAME=techypark-production-eks
EKS_NODE_GROUP_NAME=techypark-nodes
EKS_INSTANCE_TYPE=t3.medium

# RDS Database
RDS_INSTANCE_IDENTIFIER=techypark-production-db
RDS_INSTANCE_CLASS=db.t3.medium
RDS_ENGINE_VERSION=15.4
RDS_ALLOCATED_STORAGE=100

# ElastiCache Redis
ELASTICACHE_CLUSTER_ID=techypark-production-redis
ELASTICACHE_NODE_TYPE=cache.t3.micro
ELASTICACHE_ENGINE_VERSION=7.0

# S3 Storage
S3_BUCKET_NAME=techypark-production-storage
S3_REGION=us-east-1

# CloudFront CDN
CLOUDFRONT_DISTRIBUTION_ID=

# ============================================================================
# GOOGLE CLOUD PLATFORM CONFIGURATION
# ============================================================================
# Required for GCP deployments
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# GKE Cluster
GKE_CLUSTER_NAME=techypark-production-gke
GKE_NODE_POOL_NAME=techypark-nodes
GKE_MACHINE_TYPE=e2-medium

# Cloud SQL Database
CLOUDSQL_INSTANCE_NAME=techypark-production-db
CLOUDSQL_TIER=db-custom-2-7680
CLOUDSQL_DATABASE_VERSION=POSTGRES_15

# Memorystore Redis
MEMORYSTORE_INSTANCE_NAME=techypark-production-redis
MEMORYSTORE_MEMORY_SIZE_GB=2
