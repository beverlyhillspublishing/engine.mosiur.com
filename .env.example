DO_REGION=nyc3

# DOKS Cluster
DOKS_CLUSTER_NAME=engine-mosiur-k8s
DOKS_VERSION=1.28.2-do.0
DOKS_NODE_SIZE=s-2vcpu-4gb
DOKS_NODE_COUNT=3

# Managed Database
DO_DATABASE_NAME=techypark-production-db
DO_DATABASE_SIZE=db-s-2vcpu-4gb
