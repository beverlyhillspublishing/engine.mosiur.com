# ============================================================================
# MONITORING AND OBSERVABILITY
# ============================================================================

# Enable monitoring
ENABLE_MONITORING=true
ENABLE_LOGGING=true
ENABLE_TRACING=true
ENABLE_METRICS=true

# Logging Configuration
LOG_LEVEL=info                # error | warn | info | debug
