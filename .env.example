# Managed Redis
DO_REDIS_NAME=techypark-production-redis
DO_REDIS_SIZE=db-s-1vcpu-1gb
DO_REDIS_VERSION=7

# Spaces Storage
DO_SPACES_NAME=techypark-production-storage
DO_SPACES_REGION=nyc3
DO_CDN_ENDPOINT=

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Basic app settings
APP_NAME="Mosiur Engine OS"
APP_VERSION="2.0.0"
APP_DESCRIPTION="AI-Powered Multi-Cloud WordPress Hosting Platform"
APP_AUTHOR="TechyPark Team"
APP_URL=https://cloud.engine.mosiur.com

# Server configuration
PORT=3001
FRONTEND_PORT=3000
WORKERS=auto

# ============================================================================
# DATABASE CONFIGURATION (Auto-configured based on cloud platform)
# ============================================================================

# Database connection (will be set by deployment scripts)
DATABASE_URL=
DATABASE_HOST=
DATABASE_PORT=5432
DATABASE_NAME=techypark_Engin3e
DATABASE_USER=techypark
DATABASE_PASSWORD=

# Database settings
DATABASE_SSL=true
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_POOL_IDLE_TIMEOUT=30000
DATABASE_QUERY_TIMEOUT=60000
DATABASE_BACKUP_ENABLED=true

# ============================================================================
# REDIS CONFIGURATION (Auto-configured based on cloud platform)
# ============================================================================

# Redis connection (will be set by deployment scripts)
REDIS_URL=
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=
